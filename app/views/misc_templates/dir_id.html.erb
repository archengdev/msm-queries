<h1>
  Director #<%= @id%> details
</h1>

<a href="/directors">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @dir.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @dir.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @dir.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @dir.image%>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @dir.created_at%>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @dir.updated_at%>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>


  
<% @film_list.each do |film| %>
  <tr>
    <td>
      1
    </td>

    <td>
      <img src="<%=film.image%>" style="width:250px;">
    </td>

    <td>
      <%=film.title%>
    </td>

    <td>
      <%=film.year%>
    </td>

    <td>
      <%= @dir.name %>
    </td>

    <td>
      <a href="/movies/<%=film.id%>">
        Show details
      </a>
    </td>
  </tr>
<% end %>
</table>
