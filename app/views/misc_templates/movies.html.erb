<h1>
  List of all movies
</h1>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

<% @movie_list.each do |movie| %>
  <tr>
    <td>
      <%= movie.id%>
    </td>

    <td>
      <img src="<%= movie.image %>" style="width:250px;">
    </td>

    <td>
      <%= movie.title%>
    </td>

    <td>
      1975
    </td>

    <td>
      

      <%= Director.all.where({:id => movie.director_id})[0].name %>
    </td>

    <td>
      <a href="/movies/<%=movie.id%>">
        Show details
      </a>
    </td>
  </tr>
<% end %>

  </table>
